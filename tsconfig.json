{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017"],
    "outDir": "./build",
    "rootDir": "./src",
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
